@model IEnumerable<PortoAlegrePlus.Models.Categoria>

@{
    ViewBag.Title = "Categoria";
}

<div class="container body-content">
    <h2 style="padding-bottom:10px">Categorias</h2>

    @if (User.IsInRole("Admin"))
    {
        <p>
            @Html.ActionLink("Criar Categoria", "Create", null, new { @class = "btn btn-success btn-lg" })
        </p>
    }

    <table class="table table-striped table-hover ">
        <tr class="danger">
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="active">
                <td>
                    @Html.ActionLink(item.Nome, "MenuCategorias", "Reclamacao", new { categoria = item.Nome }, null)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        @Html.ActionLink("Remover", "Delete", new { id = item.CategoriaID }, new { @class = "label label-danger" })
                    </td>
                }
            </tr>
        }
    </table>
</div>
